<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bookcase.Views.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Книги" Command="{Binding Books}" />
            <Button Text="Авторы" Command="{Binding Authors}" />
            <Button Text="Издательства" Command="{Binding Houses}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>